import spacy

# Load the pre-trained NLP model
nlp = spacy.load("en_core_web_sm")

# Define the input text
input_text = "The cat sat on the mat. It was tired."

# Define the input word
input_word = "cat"

# Process the input text with spaCy
doc = nlp(input_text)

# Iterate over the sentences in the processed document
for sent in doc.sents:
    # Iterate over the words in the sentence
    for token in sent:
        # Check if the word matches the input word
        if token.text == input_word:
            # Use co-reference resolution to find related sentences
            for cluster in token._.coref_clusters:
                for mention in cluster.mentions:
                    # Check if the mention is a sentence
                    if mention.sent != sent:
                        # Print the related sentence
                        print(mention.sent.text)
